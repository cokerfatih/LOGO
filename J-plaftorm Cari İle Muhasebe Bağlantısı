GO

/****** Object:  View [dbo].[FTH_CARI_MUHASEBE_EŞLEME]    Script Date: 25.01.2023 14:24:34 ******/
SET ANSI_NULLS ON
GO

SET QUOTED_IDENTIFIER ON
GO




 ALTER VIEW [dbo].[FTH_CARI_MUHASEBE_EŞLEME] AS 

SELECT AR.CODE AS [Cari Kodu],
AR.DESCRIPTION as [Cari Adı],
AR.SEARCHTEXT AS[ARAMA METNİ],
ACC.CODE as [Muhasebe Kodu],

ACC.DESCRIPTION As [Muhasebe Adı]
FROM U_009_ARPS AS AR 
INNER JOIN U_009_GLCONNCODES CON ON AR.LOGICALREF=CON.CARDREF
INNER JOIN U_009_GLACCOUNTS ACC ON CON.GLACCOUNTREF=ACC.LOGICALREF

WHERE CON.CARDTYPE=4
GO


