
--ALINAN HİZMETLER İLE MUHASEBE HESABI SORGUSU--

-- ALIŞ HESAPLARI CRD.TYP=1
-- SATIŞ HESAPLARI CRD.TYP=3


SELECT S.CODE,S.DEFINITION_,E.CODE,E.DEFINITION_ FROM LG_122_CRDACREF C 

LEFT JOIN LG_122_SRVCARD S ON S.LOGICALREF=C.CARDREF 
LEFT JOIN LG_122_EMUHACC E ON E.LOGICALREF=C.ACCOUNTREF

WHERE S.CARDTYPE=1 AND C.TYP=1 AND C.TRCODE=3



--ALINAN HİZMETLERİN BAĞLI OLDUĞU MUHASEBE KODU BOŞMU DOLUMU--
SELECT * FROM LG_122_SRVCARD WHERE CARDTYPE=1 AND LOGICALREF NOT IN (SELECT CARDREF FROM LG_122_CRDACREF WHERE TRCODE=3 AND  TYP=1)
